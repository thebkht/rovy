{
  "expo": {
    "name": "Jarvis Controller",
    "slug": "Jarvis Controller",
    "version": "1.0.0",
    "orientation": "default",
    "scheme": "jarviscontroller",
    "icon": "./assets/images/icons/ios-light.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.jarvis.controller",
      "icon": "./assets/images/icons/ios-light.png",
      "requireFullScreen": false,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Jarvis Controller uses Bluetooth to securely provision and connect to your Jarvis.",
        "NSMicrophoneUsageDescription": "Jarvis Controller uses your microphone to communicate with your Jarvis",
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#352CF4",
        "foregroundImage": "./assets/images/icons/adaptive-icon.png",
        "monochromeImage": "./assets/images/icons/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "minSdkVersion": 23,
      "package": "com.jarvis.controller"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-screen-orientation",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Jarvis Controller to access your microphone."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#161616"
        }
      ],
      "expo-secure-store",
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysPermission": "Allow Jarvis Controller to connect to bluetooth devices"
        }
      ],
      "./plugins/withAndroidBlePermissions",
      "./plugins/withAndroidBuildGradleTweaks",
      "./plugins/withPodfileBleCleanup"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "84365424-b8dc-4997-ad48-d883e582aadf"
      }
    }
  }
}
